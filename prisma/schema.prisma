// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-py"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(uuid()) @db.Uuid
  name        String
  email       String   @unique
  password    String
  created_at  DateTime @default(now())
}



model Job {
  id            String   @id @default(uuid()) @db.Uuid
  title         String
  company_name  String  
  company_logo  String?
  company_link  String?
  job_link      String
  job_type      String
  job_location  String?
  job_salary    String?  
  source        String
  source_logo   String?
  posted        DateTime
  created_at    DateTime @default(now())

  @@unique([title, company_name])  // This creates a unique index on title and company_name
}