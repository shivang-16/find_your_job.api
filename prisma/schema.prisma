// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-py"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String      @id @default(uuid()) @db.Uuid
  name        String
  email       String   @unique
  password    String
  created_at  DateTime @default(now())
}



model Job {
  id            String   @id @default(uuid()) @db.Uuid
  title         String
  company_name  String
  job_link      String
  job_location  String
  job_salary    String
  source        String
  posted        DateTime
  created_at    DateTime @default(now())
}